zstyle ':prezto:*:*' color 'yes'

zstyle ':prezto:load' pmodule \
	'environment' \
	'command-not-found' \
	'terminal' \
	'history' \
	'directory' \
	'utility' \
	'spectrum' \
	'osx' \
	'homebrew' \
	'screen' \
	'rsync' \
	'prompt' \
	'git' \
	'dpkg' \
	'ssh' \
	'docker' \
	'completion' \
	'syntax-highlighting' \
	'history-substring-search' \
	'autosuggestions' \

zstyle ':prezto:module:prompt' theme 'pure'
zstyle ':prezto:module:prompt' pwd-length 'short'
zstyle ':prezto:module:autosugestions' color 'yes'
zstyle ':prezto:module:autosugestions:color' found ''
